<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left" style="background-color: #a5d541;
                        margin-bottom: 5px;">
                        <ul style="outline-style: groove;">
                            <li class="active"><a href="/admin/dashboard">DASHBOARD</a></li>
                            <li><a href="/admin/createblog">CREATE BLOGS</a></li>
                            <li><a href="/admin/displayblog">DISPLAY BLOGS</a></li>
                            <li><a href="/admin/category/createcategory">CREATE CATEGORY</a></li>
                            <li><a href="/admin/category/displaycategory">DISPLAY CATEGORY</a></li>
                            <li><a href="/curd/create">CREATE CURD</a></li>
                            <li><a href="/curd/display">DISPLAY CURD</a></li>
                            <li><a href="/admin/displaycontact">DISPLAY CONTACTS</a></li>
                            <li><a href="/admin/createabout">CREATE ABOUT</a></li>
                            <li><a href="/admin/recent/createrecent">CREATE RECENT</a></li>
                            <li><a href="/admin/recent/recentdisplay">DISPLAY RECENT</a></li>
                            <li><a href="/about">ABOUT</a></li>
                            <li><a href="/logout">LOGOUT</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1 class="text-info">EDIT BLOGS</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/updateblog/<%= data._id %>" method="post" enctype="multipart/form-data">
                            <div class="form-group form-row">
                                <label class="col-md-3">Title <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <input name="title" type="text" class="form-control" placeholder="Title" required value="<%= data.title %>">
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3">Description <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <textarea name="description" rows="5" class="form-control" placeholder="Description" required><%= data.description %></textarea>
                                </div>
                            </div>
                            <div class="form-group form-row">
                            <label class="col-md-3">Upload Image <span class="required">*</span></label>
                                <div class="col-md-9">
                                    <input type="file" name="image">
                                    <img src="/imageupload/<%= data.image %>" alt="" width="75px" height="100px">
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                  <button type="submit" class="btn btn-primary">UPDATE</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../footer.ejs') %>