<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left" style="background-color: #a5d541;
                        margin-bottom: 5px;">
                        <ul style="outline-style: groove;">
                            <li class="active"><a href="/admin/dashboard">DASHBOARD</a></li>
                            <li><a href="/admin/createblog">CREATE BLOGS</a></li>
                            <li><a href="/admin/displayblog">DISPLAY BLOGS</a></li>
                            <li><a href="/admin/category/createcategory">CREATE CATEGORY</a></li>
                            <li><a href="/admin/category/displaycategory">DISPLAY CATEGORY</a></li>
                            <li><a href="/curd/create">CREATE CURD</a></li>
                            <li><a href="/curd/display">DISPLAY CURD</a></li>
                            <li><a href="/admin/displaycontact">DISPLAY CONTACTS</a></li>
                            <li><a href="/admin/createabout">CREATE ABOUT</a></li>
                            <li><a href="/admin/recent/createrecent">CREATE RECENT</a></li>
                            <li><a href="/admin/recent/recentdisplay">DISPLAY RECENT</a></li>
                            <li><a href="/about">ABOUT</a></li>
                            <li><a href="/logout">LOGOUT</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1 class="text-danger">DISPLAY RECENT</h1>
                            </div>
                            <div class="dash-nav">
                                <a href="/admin/displayrecent" class="btn btn-success">Add category</a>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped">
                            <tr>
                                <th>SNo</th>
                                <th>NAME</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            <tr>
                                <% var i=1 %>
                                <% data.forEach((item)=>{ %>       
                                    <tr>
                                        <td><%= i++ %></td>
                                        <td><%= item.name %></td>
                                        <td>
                                            <img src="/imageupload/<%= item.image %>" alt="" width="75px" height="100px">
                                        </td>
                                        <td>
                                            <a href="/view/<%=item._id%>" class="btn btn-info">VIEW</a>
                                            <a href="/edit/<%=item._id%>" class="btn btn-success">EDIT</a>
                                            <a href="/delete/<%=item._id%>" class="btn btn-danger">DELETE</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tr>
                        </table>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../footer.ejs') %>